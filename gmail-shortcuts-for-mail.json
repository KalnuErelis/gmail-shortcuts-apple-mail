{
  "title": "Gmail Shortcuts for Apple Mail",
  "rules": [
    {
      "description": "Gmail: e → Archive message",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "e" },
          "to": [{ "key_code": "a", "modifiers": ["left_control", "left_command"] }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.mail$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Gmail: # → Delete message",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "3", "modifiers": { "mandatory": ["shift"] } },
          "to": [{ "key_code": "delete_or_backspace", "modifiers": ["left_command"] }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.mail$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Gmail: r → Reply",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "r" },
          "to": [{ "key_code": "r", "modifiers": ["left_command"] }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.mail$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Gmail: a → Reply All",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "a" },
          "to": [{ "key_code": "r", "modifiers": ["left_command", "left_shift"] }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.mail$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Gmail: f → Forward",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "f" },
          "to": [{ "key_code": "f", "modifiers": ["left_command", "left_shift"] }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.mail$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Gmail: c → Compose new message",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "c" },
          "to": [{ "key_code": "n", "modifiers": ["left_command"] }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.mail$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Gmail: j → Next message (down)",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "j" },
          "to": [{ "key_code": "down_arrow" }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.mail$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Gmail: k → Previous message (up)",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "k" },
          "to": [{ "key_code": "up_arrow" }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.mail$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Gmail: o → Open message",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "o" },
          "to": [{ "key_code": "return_or_enter" }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.mail$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Gmail: u → Back to inbox (close message)",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "u" },
          "to": [{ "key_code": "w", "modifiers": ["left_command"] }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.mail$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Gmail: s → Star/Flag message",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "s" },
          "to": [{ "key_code": "l", "modifiers": ["left_command", "left_shift"] }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.mail$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Gmail: ! → Mark as Junk",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "1", "modifiers": { "mandatory": ["shift"] } },
          "to": [{ "key_code": "j", "modifiers": ["left_command", "left_shift"] }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.mail$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Gmail: Shift+u → Mark as unread",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "u", "modifiers": { "mandatory": ["shift"] } },
          "to": [{ "key_code": "u", "modifiers": ["left_command", "left_shift"] }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.mail$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Gmail: Shift+i → Mark as read",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "i", "modifiers": { "mandatory": ["shift"] } },
          "to": [{ "key_code": "u", "modifiers": ["left_command"] }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.mail$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Gmail: / → Search",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "slash" },
          "to": [{ "key_code": "f", "modifiers": ["left_command", "left_option"] }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.mail$"]
            }
          ]
        }
      ]
    }
  ]
}
