{
  "title": "Gmail Shortcuts for Apple Mail",
  "rules": [
    {
      "description": "Gmail: Escape → Exit insert mode (enable shortcuts)",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.apple\\.mail$"],
              "type": "frontmost_application_if"
            }
          ],
          "from": { "key_code": "escape" },
          "to": [
            { "key_code": "escape" },
            { "set_variable": { "name": "mail_insert_mode", "value": 0 } }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Gmail: e → Archive message",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.apple\\.mail$"],
              "type": "frontmost_application_if"
            },
            {
              "name": "mail_insert_mode",
              "type": "variable_unless",
              "value": 1
            }
          ],
          "from": { "key_code": "e" },
          "to": [
            { "key_code": "a", "modifiers": ["left_control", "left_command"] }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Gmail: # → Delete message",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.apple\\.mail$"],
              "type": "frontmost_application_if"
            },
            {
              "name": "mail_insert_mode",
              "type": "variable_unless",
              "value": 1
            }
          ],
          "from": {
            "key_code": "3",
            "modifiers": { "mandatory": ["shift"] }
          },
          "to": [
            { "key_code": "delete_or_backspace", "modifiers": ["left_command"] }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Gmail: r → Reply (+ enter insert mode)",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.apple\\.mail$"],
              "type": "frontmost_application_if"
            },
            {
              "name": "mail_insert_mode",
              "type": "variable_unless",
              "value": 1
            }
          ],
          "from": { "key_code": "r" },
          "to": [
            { "key_code": "r", "modifiers": ["left_command"] },
            { "set_variable": { "name": "mail_insert_mode", "value": 1 } }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Gmail: a → Reply All (+ enter insert mode)",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.apple\\.mail$"],
              "type": "frontmost_application_if"
            },
            {
              "name": "mail_insert_mode",
              "type": "variable_unless",
              "value": 1
            }
          ],
          "from": { "key_code": "a" },
          "to": [
            { "key_code": "r", "modifiers": ["left_command", "left_shift"] },
            { "set_variable": { "name": "mail_insert_mode", "value": 1 } }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Gmail: f → Forward (+ enter insert mode)",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.apple\\.mail$"],
              "type": "frontmost_application_if"
            },
            {
              "name": "mail_insert_mode",
              "type": "variable_unless",
              "value": 1
            }
          ],
          "from": { "key_code": "f" },
          "to": [
            { "key_code": "f", "modifiers": ["left_command", "left_shift"] },
            { "set_variable": { "name": "mail_insert_mode", "value": 1 } }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Gmail: c → Compose (+ enter insert mode)",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.apple\\.mail$"],
              "type": "frontmost_application_if"
            },
            {
              "name": "mail_insert_mode",
              "type": "variable_unless",
              "value": 1
            }
          ],
          "from": { "key_code": "c" },
          "to": [
            { "key_code": "n", "modifiers": ["left_command"] },
            { "set_variable": { "name": "mail_insert_mode", "value": 1 } }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Gmail: j → Next message (down)",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.apple\\.mail$"],
              "type": "frontmost_application_if"
            },
            {
              "name": "mail_insert_mode",
              "type": "variable_unless",
              "value": 1
            }
          ],
          "from": { "key_code": "j" },
          "to": [{ "key_code": "down_arrow" }],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Gmail: k → Previous message (up)",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.apple\\.mail$"],
              "type": "frontmost_application_if"
            },
            {
              "name": "mail_insert_mode",
              "type": "variable_unless",
              "value": 1
            }
          ],
          "from": { "key_code": "k" },
          "to": [{ "key_code": "up_arrow" }],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Gmail: o → Open message",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.apple\\.mail$"],
              "type": "frontmost_application_if"
            },
            {
              "name": "mail_insert_mode",
              "type": "variable_unless",
              "value": 1
            }
          ],
          "from": { "key_code": "o" },
          "to": [{ "key_code": "return_or_enter" }],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Gmail: u → Back to inbox (close message)",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.apple\\.mail$"],
              "type": "frontmost_application_if"
            },
            {
              "name": "mail_insert_mode",
              "type": "variable_unless",
              "value": 1
            }
          ],
          "from": { "key_code": "u" },
          "to": [
            { "key_code": "w", "modifiers": ["left_command"] },
            { "set_variable": { "name": "mail_insert_mode", "value": 0 } }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Gmail: s → Star/Flag message",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.apple\\.mail$"],
              "type": "frontmost_application_if"
            },
            {
              "name": "mail_insert_mode",
              "type": "variable_unless",
              "value": 1
            }
          ],
          "from": { "key_code": "s" },
          "to": [
            { "key_code": "l", "modifiers": ["left_command", "left_shift"] }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Gmail: ! → Mark as Junk",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.apple\\.mail$"],
              "type": "frontmost_application_if"
            },
            {
              "name": "mail_insert_mode",
              "type": "variable_unless",
              "value": 1
            }
          ],
          "from": {
            "key_code": "1",
            "modifiers": { "mandatory": ["shift"] }
          },
          "to": [
            { "key_code": "j", "modifiers": ["left_command", "left_shift"] }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Gmail: Shift+u → Mark as unread",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.apple\\.mail$"],
              "type": "frontmost_application_if"
            },
            {
              "name": "mail_insert_mode",
              "type": "variable_unless",
              "value": 1
            }
          ],
          "from": {
            "key_code": "u",
            "modifiers": { "mandatory": ["shift"] }
          },
          "to": [
            { "key_code": "u", "modifiers": ["left_command", "left_shift"] }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Gmail: Shift+i → Mark as read",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.apple\\.mail$"],
              "type": "frontmost_application_if"
            },
            {
              "name": "mail_insert_mode",
              "type": "variable_unless",
              "value": 1
            }
          ],
          "from": {
            "key_code": "i",
            "modifiers": { "mandatory": ["shift"] }
          },
          "to": [
            { "key_code": "u", "modifiers": ["left_command"] }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Gmail: / → Search (+ enter insert mode)",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.apple\\.mail$"],
              "type": "frontmost_application_if"
            },
            {
              "name": "mail_insert_mode",
              "type": "variable_unless",
              "value": 1
            }
          ],
          "from": { "key_code": "slash" },
          "to": [
            { "key_code": "f", "modifiers": ["left_command", "left_option"] },
            { "set_variable": { "name": "mail_insert_mode", "value": 1 } }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Gmail: g then i → Go to Inbox",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.apple\\.mail$"],
              "type": "frontmost_application_if"
            },
            {
              "name": "mail_insert_mode",
              "type": "variable_unless",
              "value": 1
            },
            {
              "name": "gmail_g_mode",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": { "key_code": "i" },
          "to": [
            { "key_code": "1", "modifiers": ["left_command"] }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Gmail: g prefix key",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.apple\\.mail$"],
              "type": "frontmost_application_if"
            },
            {
              "name": "mail_insert_mode",
              "type": "variable_unless",
              "value": 1
            }
          ],
          "from": { "key_code": "g" },
          "to": [
            { "set_variable": { "name": "gmail_g_mode", "value": 1 } }
          ],
          "to_delayed_action": {
            "to_if_canceled": [
              { "set_variable": { "name": "gmail_g_mode", "value": 0 } }
            ],
            "to_if_invoked": [
              { "set_variable": { "name": "gmail_g_mode", "value": 0 } }
            ]
          },
          "type": "basic"
        }
      ]
    }
  ]
}
